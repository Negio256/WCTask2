<h3>Books</h3>
<table>
	<thead>
		<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
		<th colspan="3"></th>
		<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td class="tdd"><%=book.title %></td>
			<td class="tdd"><%=book.body %></td>
			<td class="tdd"><%= link_to "Show" ,book_path(book.id) %></td>
			<td class="tdd"><%= link_to "Edit" , edit_book_path(book.id) %></td>
			<td class="tdd"><%= link_to "Destroy" , destroy_book_path(book.id), method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h4>New book</h4>
<%= form_for(@book) do |f| %>

	<h6>title</h6>
	<%= f.text_field :title %>

	<h6>Body</h6>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>

<% end %>